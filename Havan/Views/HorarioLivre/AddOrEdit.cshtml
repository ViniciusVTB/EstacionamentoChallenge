@model Havan.Models.HorarioLivre

@{
    ViewData["Title"] = "Create";
}

<h1>Parametrizar</h1>

<h4>HorarioLivre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrEdit">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dia" class="control-label"></label>
                @Html.DropDownListFor(x => x.Dia, new SelectList(ViewBag.Dias, "Value", "Text"), htmlAttributes: new { @class="form-control"})
                <span asp-validation-for="Dia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraInicial" class="control-label"></label>
                <input type="time" asp-for="HoraInicial" class="form-control" />
                <span asp-validation-for="HoraInicial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraFinal" class="control-label"></label>
                <input type="time" asp-for="HoraFinal" class="form-control" />
                <span asp-validation-for="HoraFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
